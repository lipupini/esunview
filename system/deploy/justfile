set dotenv-filename := "../config/.env"

default:
	just push
	ssh $SSH_USER@$SSH_HOST "cd ${DEPLOY_DIRECTORY} && git fetch origin master && git checkout origin/master"

# Grab and integrate the latest version from remote `origin` https://github.com/lipupini/esunview.git
upgrade:
	#git reset --hard origin/master
	git fetch origin master && git checkout origin/master

push:
	GIT_SSH_COMMAND="ssh -i ${GIT_SSH_KEY}" git push origin HEAD
